@{
    ViewData["Title"] = "Projektinformation";
}

<div class="container mt-5">
    <h2 class="mb-4">Projektinformation</h2>

    <!-- 📌 Sektion: Projektinfo -->
    <div class="border p-3 mb-4">
        <h4 class="mb-3">Projektinfo</h4>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Projektnr</label>
                <input type="text" class="form-control" value="P-101" readonly>
            </div>
            <div class="col-md-6">
                <label class="form-label">Benämning</label>
                <input type="text" class="form-control" value="Städa mattan" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label">Startdatum</label>
                <input type="text" class="form-control" value="2025-02-10" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label">Slutdatum</label>
                <input type="text" class="form-control" value="2025-02-15" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <input type="text" class="form-control" value="Pågår" readonly>
            </div>
            <div class="col-md-6">
                <label class="form-label">Projektledare</label>
                <input type="text" class="form-control" value="Anna Andersson" readonly>
            </div>
        </div>
    </div>

    <!-- 📌 Sektion: Beställningar -->
    <div class="border p-3 mb-4">
        <h4 class="mb-3">Beställningar</h4>
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Ny matta</strong> - 123 timmar x 123 kr/timme = <strong>15129 kr</strong>
                    <br><small>Kund: Företag A</small>
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>Städa mattan</strong> - 456 timmar x 123 kr/timme = <strong>56088 kr</strong>
                    <br><small>Kund: Företag B</small>
                </div>
            </li>
        </ul>
    </div>

    <!-- 📌 Sektion: Sammanställning -->
    <div class="border p-3 mb-4">
        <h4 class="mb-3">Sammanställning</h4>
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Totala Timmar</label>
                <input type="text" class="form-control" value="579" readonly>
            </div>
            <div class="col-md-3">
                <label class="form-label">Total Pris</label>
                <input type="text" class="form-control" value="71217 kr" readonly>
            </div>
            <div class="col-md-6">
                <label class="form-label">Anteckningar</label>
                <textarea class="form-control" rows="3" readonly>Anteckningar om projektet...</textarea>
            </div>
        </div>
    </div>

    <!-- 📌 Action Buttons -->
    <div class="d-flex justify-content-end gap-3 p-3 mb-4">
      
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Tillbaka</a>
        <a asp-controller="EditPage" asp-action="Index" type="button" class="btn btn-warning">Redigera</a>
    </div>

</div>
